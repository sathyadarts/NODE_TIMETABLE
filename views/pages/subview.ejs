<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <div class="container mt-4">
            <table class="table" style="background-color:lightpink;">
                <thead>
                    <h1>SUBJECT DETAILS</h1>
                    <tr>
                        <th>Sub Code</th>
                        <th>Sub Name</th>
                        <th>Credit Hour</th>
                        <th>Semester</th>
                        <th>Year</th>
                        <th>update</th>
                        <th>delete</th>
                    </tr>
                </thead>
                <tbody>
                    <%if(data.length)
                    {
                        for(var i=0; i<data.length; i++)
                        {
                    %>
                    <tr>
                        <th scope="row"><%=data[i].subcode%></th>
                        <td><%=data[i].subname%></td>
                        <td><%=data[i].credithour%></td>
                        <td><%=data[i].semester%></td>
                        <td><%=data[i].year%></td>
                        <td><a href="update3"><button>Update</button></a></td>
                        <td><a href="delete3"><button>delete</button></a></td> 
                    </tr>
                        <%}
                    }
                    else
                    {%>
                        <tr>
                            <td>no data ever existed.</td>
                        </tr>
                    <%}%>
                </tbody>
            </table>
            <a href="home"><button>Home</button></a>
        </div>
    </body>
    </html>